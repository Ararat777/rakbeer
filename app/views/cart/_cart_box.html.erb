<% if current_order.order_items.size > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Цена</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% current_order.order_items.each do |item| %>
        <%= render "cart/cart_row",item: item %>
      <% end %>
      <tr>
        <td colspan="2">Всего:</td>
        <td><%= current_order.total_amount %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "Отменить",order_path(current_order.id),class: "btn btn-danger",method: :delete %>
  <%= link_to "Оформить заказ",new_completed_order_path,class: "btn btn-success float-right" %>
  
<% else %>
  <h3 class="text-center">Пусто</h3>
<% end %>